@model IEnumerable<ArdillaShop.Models.Product>
@{
    int total = 0;
}
<style>
    .productInCart:nth-child(even) {
        background-color: rgba(0, 0, 0, .03);
    }

    .gridHeader {
        font-size: 20pt;
        font-weight: 500;
        border-bottom: 1px gray solid;
        text-align: center;
    }

    .cartResult {
        font-size: 22pt;
    }
/*    .btnOrder{
        color: white;
    }*/
</style>

<form method="post" asp-action="Order">
    <div class="container-fluid">
        <div class="row gridHeader">
            <div class="col-2"></div>
            <div class="col-4">Name</div>
            <div class="col-2">Category</div>
            <div class="col-1">Price</div>
        </div>
        @foreach (var item in Model)
        {
            <div class="productInCart">
                <partial name="_cartProductCard" model="item" />
            </div>
            total += (int)item.Price;
        }

        <div class="row cartResult mt-5">
            <div class="col-7"></div>
            <div class="col-2">
                <p id="totalSum">Total: @total$</p>
            </div>
            <div class="col-3">
                <a asp-controller="Cart" asp-action="Order" class="btn-success btnOrder text-white d-inline-block rounded text-center pr-5 pl-5">Order</a>
            </div>
        </div>
    </div>
</form>
