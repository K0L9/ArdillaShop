@model ArdillaShop.Models.Product

<div class="col-4 filter @Model.Category.Name">
    <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-reset">
        <div class="card mb-3 shadow-sm">
            <h3 class="card-header">@Model.Name</h3>
            <img src="@ENV.ImagePath@Model.Image" alt="Product photo" />
            <div class="card-body">
                <p class="card-text">@Model.ShortDesc</p>
            </div>
            <h3 class="text-right mr-3">@Model.Price $</h3>
        </div>
    </a>
</div>
